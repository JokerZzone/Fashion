<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lanou.dao.BrandMapper">
	
	<resultMap type="Brand" id="brandResult">
		<id column="brand_id" property="brandId" javaType="int"/>
		<result column="brand_name" property="brandName" jdbcType="VARCHAR"/>
		<result column="brand_img" property="brandImg" jdbcType="VARCHAR"/>
		<result column="brand_desc" property="brandDesc" jdbcType="VARCHAR"/>
		<result column="site_url" property="siteUrl" jdbcType="VARCHAR"/>
		<result column="sort_order" property="sortOrder" javaType="int"/>
		<result column="is_show" property="isShow" javaType="int"/>
	</resultMap>
	
	<select id="selectLikeDesc_Letter" resultMap="brandResult">
		select * from brand where brand_desc like concat(#{braDesc},'%')
	</select>
	
	<select id="selectLikeDesc_Country" resultMap="brandResult">
		select * from brand where brand_desc like concat('%',#{braDesc})
	</select>
	
	<select id="findBrandById" parameterType="int" resultMap="brandResult">
		select * from brand where brand_id = #{AA}
	</select>
	
  
</mapper>