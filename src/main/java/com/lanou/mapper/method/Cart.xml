<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lanou.dao.CartMapper">
	
	<select id="selectByUserId" resultMap="CartResultMap.cartResult">
		select * from cart 
			where user_id = #{userId}
	</select>
	
	<select id="selectByGoodsId" resultMap="CartResultMap.cartResult">
		select * from cart where goods_id = #{goodsId}
	</select>
	
	<select id="selectMax" resultType="Integer">
		select max(parent_id) from cart 
			where user_id = #{userId}
	</select>
	
	<insert id="addCart">
		insert into cart(user_id,session_id,goods_id,
			goods_name,shop_price,goods_number) values
			(#{userId},#{sessionId},#{goodsId},#{goodsName},#{shopPrice},#{goodsNumber})
	</insert>
  
  	<update id="updateCart">
		update cart set goods_number=#{goodsNumber}
		where goods_id=#{goodsId} and user_id=#{userId}
	</update>
</mapper>