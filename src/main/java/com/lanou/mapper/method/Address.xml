<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lanou.dao.AddressMapper">
	
	<!-- 根據用戶id查出所有地址簿 -->
	<select id="selectAll" resultMap="AddressResultMap.addressResult">
		select * from address where user_id = #{userId}
	</select>
	
	<insert id="addAddress">
		insert into address(user_id,consignee,tel,mobile,email,province,city,country,address,
		zipcode) values(#{userId},#{consignee},#{tel},#{mobile},#{email},
		#{province},#{city},#{country},#{address},#{zipcode}) 
	</insert>
	
	<update id="updateAddress">
		update address set consignee=#{consignee}, tel=#{tel},mobile=#{mobile},
		email=#{email},province=#{province},city=#{city},country=#{country},
		address=#{address},zipcode=#{zipcode} where user_id = #{userId} and address_id = #{addressId}
	</update>
	
	<delete id="deleteAddress" parameterType="int">
		delete from address where address_id = #{address_id}
	</delete>
	
	<select id="findOrder_Address" parameterType="int" resultMap="AddressResultMap.addressResult">
		select * from address where address_id = #{address_id}
	</select>
	
</mapper>