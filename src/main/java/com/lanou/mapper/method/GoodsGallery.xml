<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lanou.dao.GoodsGalleryMapper">

	<select id="findGoodsGolleryById" parameterType="int" 
		resultMap="GoodsGalleryResultMap.goodsGalleryResult">
		
		select * from goods_gallery where goods_id = #{goodsId}
	</select>
	
	<update id="updateImgDesc">
		update goods_gallery set img_desc = #{0}
			where img_id = #{1}
	</update>
	
</mapper>