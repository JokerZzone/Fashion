<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lanou.dao.CategoryMapper">

	<select id="findByParentId" resultMap="result">
		select cat_id,cat_name, parent_id,sort_order,show_in_nav,
		style from category where parent_id = #{0} and show_in_nav = 1
	</select>
	<resultMap type="Category" id="result">
		<id column="cat_id" property="catId" javaType="int"/>
		<result column="cat_name" property="catName" javaType="String"/>
		<result column="parent_id" property="parentId" javaType="int"/>
		<result column="sort_order" property="sortOrder" javaType="int"/>
		<result column="show_in_nav" property="showInNav" javaType="int"/>
		<result column="style" property="style" javaType="String"/>
		<collection property="categories" ofType="Category" select="findByParentId" column="cat_id" />
	</resultMap>
	
	<select id="findByCatId" parameterType="int" resultMap="result2">
		select * from category where cat_id = #{a}
	</select>
	<resultMap type="Category" id="result2">
		<id column="cat_id" property="catId" javaType="int"/>
		<result column="cat_name" property="catName" javaType="String"/>
	</resultMap>

	<!-- ***************************************** -->
	
	<select id="findSimpleFatherCategory" resultMap="findCategoryResult">
		select cat_id,cat_name from category where  parent_id = 0
	</select>
	<select id="selectCategoryChildrenByParentId"  parameterType="int" resultMap="findCategoryResult">
		select * from category where parent_id = #{parentId}
	</select>
	<resultMap type="Category" id="findCategoryResult">
		<id column="cat_id" property="catId" javaType="int"/>
		<result column="cat_name" property="catName" javaType="String"/>
	</resultMap>
	
</mapper>