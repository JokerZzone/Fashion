<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lanou.dao.GoodsMapper">
	
	<select id="findGoods" resultMap="findGoodsResult" parameterType="int">
		select * from goods where key_id = #{keyId}
	</select>
	<select id="findGoods" parameterType="int" resultMap="findGoodsResult">
		select * from goods where goods_id = #{aa}
	</select>
	
  	<resultMap type="Goods" id="findGoodsResult">
  		<id column="goods_id" property="goodsId" javaType="int" />
  		<result column="goods_name" property="goodsName" javaType="String"/>
  		<result column="goods_desc" property="goodsDesc" javaType="String"/>
  		<result column="shop_price" property="shopPrice" javaType="double"/>
  		<result column="goods_url" property="goodsUrl" javaType="String"/>
  		<result column="discount" property="discount" javaType="String"/>
  		<result column="is_hot" property="isHot" javaType="int"/>
  		<association property="goodsGallery" javaType="GoodsGallery">
			<id column="img_id" property="imgId" javaType="int"/>
			<result column="goods_id" property="goodsId" javaType="int"/>
			<result column="img_url" property="imgUrl" />
		</association>
  	</resultMap> 
  	<select id="findGoodsById" parameterType="int" resultMap="findGoodsResult">
  		select * from goods as a, goods_gallery as b 
  		where a.goods_id = b.goods_id and topic_id = #{aa}
  	</select>
  	
   <select id="sortByPriceAsc" resultMap="findGoodsResult" parameterType="int">
   		select * from goods where cat_id = #{cat_id} order by shop_price asc
   </select>
   <select id="sortByPriceDesc" resultMap="findGoodsResult" parameterType="int">
   		select * from goods where cat_id = #{cat_id} order by shop_price Desc 
   </select>
   
   <select id="findGoodsBySecond" parameterType="int" resultMap="findGoodsResult">
   		select * from goods where cat_id = #{catId}
   </select>
   
   
</mapper>