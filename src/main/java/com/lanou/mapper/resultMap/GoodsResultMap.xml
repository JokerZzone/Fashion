<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="GoodsResultMap">
	<!-- wz -->
  	<resultMap type="Goods" id="goodsResult">
		<id column="goods_id" property="goodsId" javaType="int" />
		<result column="goods_name" property="goodsName" javaType="String" />
		<result column="goods_name_en" property="goodsNameEn" javaType="String" />
		<result column="goods_desc" property="goodsDesc" javaType="String" />
		<result column="img_desc" property="imgDesc" javaType="String" />
		<result column="market_price" property="marketPrice" javaType="double" />
		<result column="shop_price" property="shopPrice" javaType="double" />
		<result column="discount" property="discount" javaType="String" />
		<result column="is_hot" property="isHot" javaType="int" />
		<association select="com.lanou.dao.GoodsGalleryMapper.findImgPre" 
			column="goods_id" property="imgPre" javaType="java.util.ArrayList"/>	
		<association select="com.lanou.dao.GoodsGalleryMapper.findLeft" 
			column="goods_id" property="leftImg" javaType="java.util.ArrayList"/>	
		<association select="com.lanou.dao.GoodsGalleryMapper.findDetail" 
			column="goods_id" property="detailImg" javaType="java.util.ArrayList"/>
		<association select="com.lanou.dao.GoodsGalleryMapper.findImgSuff" 
			column="goods_id" property="imgSuff" javaType="java.util.ArrayList"/>
		<association select="com.lanou.dao.BrandMapper.findBrandById" 
			column="brand_id" property="subBrand" javaType="Brand"/>
	</resultMap>
	
	<!-- 超值小樣map -->
	<resultMap type="Goods" id="goodsResult1">
		<id column="goods_id" property="goodsId" javaType="int" />
		<result column="goods_name" property="goodsName" javaType="String" />
		<result column="goods_desc" property="goodsDesc" javaType="String" />
		<result column="img_desc" property="imgDesc" javaType="String" />
		<result column="shop_price" property="shopPrice" javaType="double" />
		<result column="discount" property="discount" javaType="String" />
	</resultMap>
	
	<!-- xy -->
	<resultMap type="Goods" id="findResult">
		<id column="goods_id" property="goodsId" javaType="int" />
		<result column="goods_name" property="goodsName" javaType="String" />
		<result column="shop_price" property="shopPrice" javaType="double" />
		<result column="discount" property="discount" javaType="String" />
		<result column="img_desc" property="imgDesc" javaType="String" />
	</resultMap>
	
	<!-- xy 卖家 -->
	<resultMap type="Goods" id="sellerResult">
		<id column="goods_id" property="goodsId" javaType="int" />
		<result column="goods_sn" property="goodsSn" javaType="String"/>
		<result column="goods_name" property="goodsName" javaType="String" />
		<result column="market_price" property="marketPrice" javaType="double" />
		<result column="shop_price" property="shopPrice" javaType="double" />
		<result column="discount" property="discount" javaType="String" />
		<result column="goods_number" property="goodsNumber" javaType="int"/>
		<collection select="com.lanou.dao.GoodsGalleryMapper.findGoodsGolleryById"
			column="goods_id" property="goodsGalleries" javaType="java.util.List" />
	</resultMap>
	
	<!-- sp -->
	<resultMap type="Goods" id="findGoodsAttr_idByTitleResult">
		<id column="goods_id" property="goodsId" javaType="int" />
		<result column="attr_id" property="goodsAttr_id" javaType="String" />
		<result column="brand_id" property="brandId" javaType="int" />
	</resultMap>
	<resultMap type="Goods" id="findGoodsAttr_idByCateResult">
		<id column="goods_id" property="goodsId" javaType="int" />
		<result column="attr_id" property="goodsAttr_id" javaType="String" />
		<result column="brand_id" property="brandId" javaType="int" />
	</resultMap>
</mapper>