<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="CategoryResultMap">

	<resultMap type="Category" id="sellerResult">
		<id column="cat_id" property="catId" javaType="int"/>
		<result column="cat_name" property="catName" javaType="String"/>
		<result column="parent_id" property="parentId" javaType="int"/>
		<result column="sort_order" property="sortOrder" javaType="int"/>
		<result column="show_in_nav" property="showInNav" javaType="int"/>
		<result column="style" property="style" javaType="String"/>
		<result column="is_show" property="isShow" javaType="int" />
		<result column="good_number" property="goodNumber" javaType="int"/>
	</resultMap>
	
  	<resultMap type="Category" id="result">
		<id column="cat_id" property="catId" javaType="int"/>
		<result column="cat_name" property="catName" javaType="String"/>
		<result column="parent_id" property="parentId" javaType="int"/>
		<result column="sort_order" property="sortOrder" javaType="int"/>
		<result column="show_in_nav" property="showInNav" javaType="int"/>
		<result column="style" property="style" javaType="String"/>
		<collection property="categories" ofType="Category" select="findByParentId" column="cat_id" />
	</resultMap>
	
  	<resultMap type="Category" id="result2">
		<id column="cat_id" property="catId" javaType="int"/>
		<result column="cat_name" property="catName" javaType="String"/>
	</resultMap>
	
	<resultMap type="Category" id="findCategoryResult">
		<id column="cat_id" property="catId" javaType="int"/>
		<result column="cat_name" property="catName" javaType="String"/>
	</resultMap>
</mapper>