<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="BrandResultMap">
	
  	<resultMap type="Brand" id="brandResult">
  		<id column="brand_id" property="brandId" javaType="int"/>
		<result column="brand_name" property="brandName" jdbcType="VARCHAR"/>
		<result column="brand_desc" property="brandDesc" jdbcType="VARCHAR"/>
		<result column="site_url" property="siteUrl" jdbcType="VARCHAR"/>
		<result column="sort_order" property="sortOrder" javaType="int"/>
		<result column="img_desc" property="imgDesc" jdbcType="VARCHAR"/>
		<association select="com.lanou.dao.BrandGalleryMapper.findImgPre" 
			column="brand_id" property="imgPre" javaType="java.util.ArrayList"/>
			
		<association select="com.lanou.dao.BrandGalleryMapper.findDetail" 
			column="brand_id" property="detailImg" javaType="java.util.ArrayList"/>
			
		<association select="com.lanou.dao.BrandGalleryMapper.findImgSuff" 
			column="brand_id" property="imgSuff" javaType="java.util.ArrayList"/>
  	</resultMap>
  	
</mapper>