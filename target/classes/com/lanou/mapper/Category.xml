<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lanou.dao.CategoryMapper">

	<select id="findByParentId" resultMap="result">
		select * from category where parent_id = #{0}
	</select>
	<resultMap id="result" type="Category">
		<id column="cat_id" property="catId" javaType="int"/>
		<result column="cat_name" property="catName" javaType="String"/>
		<result column="parent_id" property="parentId" javaType="int"/>
		<collection property="categories" ofType="Category" select="findByParentId" column="cat_id" />
	</resultMap>
	
	<update id="addCatData">
		update nav set cat_data = #{0} where nav_id = #{1}
	</update>

	<select id="selectCatData" parameterType="int" resultMap="result1">
		select * from nav where nav_id = #{a}
	</select>
	<resultMap type="Nav" id="result1">
		<id column="nav_id" property="navId" javaType="int"/>
		<result column="nav_name" property="navName" javaType="String"/>
		<result column="cat_data" property="catData" javaType="String"/>
	</resultMap>

	<select id="findByCatId" parameterType="int" resultMap="result2">
		select * from category where cat_id = #{a}
	</select>
	<resultMap type="Category" id="result2">
		<id column="cat_id" property="catId" javaType="int"/>
		<result column="cat_name" property="catName" javaType="String"/>
	</resultMap>

	<!-- ***************************************** -->



	
</mapper>