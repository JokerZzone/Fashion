<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lanou.dao.AdMapper">
	
	<select id="findAdById" parameterType="int" resultMap="adResult">
		select * from ad where ad_id = #{xx}
	</select>	
  	<resultMap type="Ad" id="adResult">
  		<id column="ad_id" property="adId" javaType="int"/>
  		<result column="ad_img" property="adImg" javaType="String"/>
  		<result column="link_url" property="linkUrl" javaType="String"/>
  	</resultMap>
  	
  	
</mapper>