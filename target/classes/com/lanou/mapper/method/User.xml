<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lanou.dao.UserMapper">
	
	<select id="confirmUser" resultMap="UserResultMap.userResult">
		select * from users where user_name = #{username}
	</select>
	
	<select id="focusEmail" resultMap="UserResultMap.userResult">
		select * from users where email = #{email}
	</select>
	
	<insert id="addUser" parameterType="User">
		insert into users(user_name,password,email) values(#{username},#{password},#{email})
	</insert>
	
	<update id="updatePassword" parameterType="User">
		update users set password = #{password} where user_id = #{uId}
	</update>
	
	<select id="selectUserByUId" parameterType="int" resultMap="UserResultMap.userResult">
		select * from users where user_id = #{user_id}
	</select>

	<select id="updateUserByUId" parameterType="User">
		update users set real_name = #{realname}, sex = #{sex} ,email = #{email} , telephone = #{telephone}
		 	, mobile_phone = #{phone} , birthday = #{birthday} where user_id = #{uId}
	</select>
	
	<select id="selectAllUserByNowPage" parameterType="int" resultMap="UserResultMap.userResult">
		select * from users limit #{0},#{1}
	</select>
	<select id="selectCountOfAllUser" resultType="int">
		select count(*) from users
	</select>
	
	
  	<select id="comfirm" >
  		select count(*) from cart where username
  	</select>
  
</mapper>