<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lanou.dao.AdGalleryMapper">

	<select id="findImgPre" resultType="String">
		select img_pre from ad_gallery 
			where ad_id = #{0}
	</select>
	
	<select id="findDetail" resultType="String">
		select ad_img from ad_gallery 
			where ad_id = #{0}
	</select>
	
	<select id="findImgSuff" resultType="String">
		select img_suff from ad_gallery 
			where ad_id = #{0}
	</select>
  		
</mapper>