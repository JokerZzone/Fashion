<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lanou.dao.NavMapper">
	
	<select id="selectAll" resultMap="result">
		select * from nav
	</select>
	<resultMap type="Nav" id="result">
		<id column="nav_id" property="navId" javaType="int"/>
		<result column="nav_name" property="navName" javaType="String"/>
		<result column="vieworder" property="viewOrder" javaType="int"/>
		<result column="opennew" property="openNew" javaType="int"/>
		<result column="url" property="url" javaType="String"/>
		<result column="nav_type" property="navType" javaType="String"/>
	</resultMap>

	<select id="selectCatData" parameterType="int" resultMap="result1">
		select * from nav where nav_id = #{a}
	</select>
	<resultMap type="Nav" id="result1">
		<id column="nav_id" property="navId" javaType="int"/>
		<result column="nav_name" property="navName" javaType="String"/>
		<result column="cat_data" property="catData" javaType="String"/>
	</resultMap>
  	
  	<update id="addCatData">
		update nav set cat_data = #{0} where nav_id = #{1}
	</update>
	
	<!-- xy -->
	<!-- 6.展示导航栏 -->
  	<select id="lookNav" resultMap="result">
  		select nav_id,nav_name,nav_type,vieworder,url,opennew from nav 
  	</select>
  	
  	<!-- 添加自定义导航栏 -->
  	<insert id="addNav" parameterType="Nav">
  		insert into nav (nav_name,nav_type,vieworder,url,opennew) 
  		values (#{navName},#{navType},#{viewOrder},#{url},#{openNew})
  	</insert>
  	
  	<!-- 修改导航栏 -->
  	<update id="updateNav" parameterType="Nav">
  		update nav set nav_name=#{navName},nav_type=#{navType},vieworder=#{viewOrder},
  		url=#{url},opennew=#{openNew} where nav_id = #{navId}
  	</update>
  	
  	
</mapper>