<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lanou.dao.OrderInfoMapper">
	
	<!-- 根据用户id查找到用户的订单詳情 -->
	<select id="findOrderInfoById">
		select * from order_info where user_id = #{userId}
	</select>
	<insert id="insertOrderInfo">
		insert into order_info(user_id,order_status,shipping_status,pay_status) 
			values()
	</insert>
	
</mapper>