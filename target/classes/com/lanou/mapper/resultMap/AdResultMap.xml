<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="AdResultMap">
	
  	<resultMap type="Ad" id="adResult">
  		<id column="ad_id" property="adId" javaType="int"/>
  		<result column="ad_name" property="adName" javaType="String"/>
  		<result column="start_time" property="startTime" javaType="String"/>
  		<result column="end_time" property="endTime" javaType="String"/>
  		<association select="com.lanou.dao.AdGalleryMapper.findImgPre" 
			column="ad_id" property="imgPre" javaType="java.util.ArrayList"/>
			
  		<association select="com.lanou.dao.AdGalleryMapper.findDetail" 
			column="ad_id" property="detailImg" javaType="java.util.ArrayList"/>
			
		<association select="com.lanou.dao.AdGalleryMapper.findImgSuff" 
			column="ad_id" property="imgSuff" javaType="java.util.ArrayList"/>
  	</resultMap>
  	
</mapper>