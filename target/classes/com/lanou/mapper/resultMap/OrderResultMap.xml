<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="OrderResultMap">

	<resultMap type="Orders" id="orderResult">
		<id column="order_id" property="orderId" javaType="int" />
		<result column="user_id" property="user_id" javaType="int" />
		<result column="status" property="status" javaType="int" />
		<result column="begin_time" property="beginTime" javaType="Date" />
		<result column="end_time" property="endTime" javaType="Date" />
		<association property="address" javaType="com.lanou.entity.Address" 
		select="com.lanou.dao.AddressMapper.findOrder_Address" column="address_id"></association>
		<collection property="carts" ofType="com.lanou.entity.Cart" 
		select="com.lanou.dao.CartMapper.findOrder_Carts" column="{user_id=user_id,order_id=order_id}" ></collection>
	</resultMap>
</mapper>